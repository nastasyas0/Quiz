<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_ru"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ques"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="105dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_stroke_black"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/brown"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/ru" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_math"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/math" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_inf"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/inf" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_en"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/en" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_stroke_black_press_gray"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/brown"
                    android:textSize="38sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_finish_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_stroke_black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/finish_game"
                android:textAllCaps="false"
                android:textColor="@color/brown"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>